@model DobrevBusStation.Models.ProductType
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Edit Product Type</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product" class="form-control" />
            </div>
            <span asp-validation-for="Product" class="text-danger"></span>
        </div>
        <div class="form-group">

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>

    </div>
</form>
