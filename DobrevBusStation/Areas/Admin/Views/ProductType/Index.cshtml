@using DobrevBusStation.Models;
@model IEnumerable<ProductType>
@{
    ViewData["Title"] = "Index";
}

<br/><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; New Product </a>
    </div>
</div>
<br/><br/>
<div>
    <table class ="table table-striped border">
        <tr class="table-info">
            <th>
            @Html.DisplayNameFor(c => c.Product)
            </th>
        </tr>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Product</td>
                    <td>
                        <partial name="_ButtonPartial" model="@item.Id"/>
                    </td>
                    
                </tr>
            }
    </table> 
</div>
